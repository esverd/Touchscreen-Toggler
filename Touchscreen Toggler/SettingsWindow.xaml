<Window x:Class="Touchscreen_Toggler.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="350">
    <Grid>
        <TextBlock Text="Select your Touchscreen Device:" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <ListBox Name="DeviceList" Margin="10,30,10,50"/>
        <Button Name="RefreshButton" Content="Refresh" VerticalAlignment="Bottom" Margin="10,10,90,10" Click="RefreshButton_Click"/>
        <Button Name="SaveButton" Content="Save" VerticalAlignment="Bottom" Margin="0,10,10,10" HorizontalAlignment="Right" Width="75" Click="SaveButton_Click"/>
    </Grid>
</Window>
