<Window x:Class="Touchscreen_Toggler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Touchscreen_Toggler"
        Title="Settings" Height="200" Width="300">
    <Grid>
        <ListBox Name="DeviceList" Margin="10"/>
        <Button Name="RefreshButton" Content="Refresh" VerticalAlignment="Bottom" Margin="10" Click="RefreshButton_Click"/>
        <Button Name="SaveButton" Content="Save" VerticalAlignment="Bottom" Margin="10" HorizontalAlignment="Right" Click="SaveButton_Click"/>
    </Grid>
</Window>


